<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">

                </shape>
            </item>
            <item android:left="10dp">
                <bitmap android:src="@drawable/left_arrow_disabled" android:gravity="left" />
            </item>
        </layer-list>
    </item>
    <item
        android:state_pressed="true"
        android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid
                        android:color="#fff" />
                </shape>
            </item>
            <item android:left="10dp">
                <bitmap android:src="@drawable/left_arrow_pressed" android:gravity="left" />
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item
                android:bottom="-1dp"
                android:left="-1dp"
                android:right="-1dp"
                android:top="0dp">
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="1dp"
                        android:color="#fff" />

                    <solid android:color="#00FFFFFF" />

                    <padding android:left="0dp"
                        android:right="0dp"
                        android:top="0dp"
                        android:bottom="0dp" />
                </shape>
            </item>
            <item android:left="10dp">
                <bitmap android:src="@drawable/left_arrow" android:gravity="left" />
            </item>
        </layer-list>
    </item>
</selector>